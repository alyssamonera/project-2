<div class="title-bar">
  <h1><a href="/">Calliope</a></h1>

  <div class="title-links">
    <% if (currentUser) { %>
      <form action="/login?_method=DELETE" method="POST">
        <input type="submit" value="Log Out" class="btn btn-dark">
      </form>
      <a href="/users/<%= currentUser._id %>"><button class="btn btn-dark">Account</button></a>
    <% } else { %>
      <a href="/login"><button class="btn btn-dark">Log In</button></a>
      <a href="/signup"><button class="btn btn-dark">Sign Up</button></a>
    <% }%>
  </div>
</div>

