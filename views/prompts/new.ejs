<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head.ejs %>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-lite.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-lite.js"></script>
    <link rel="stylesheet" href="/css/prompts.css">
  </head>
  <body>

    <header>
      <% include ../partials/header.ejs %>
    </header>

    <main class="new-prompt">

      <% if (error){ %>
        <div class="error-message">
          <p>You must have a title.</p>
        </div>
      <% } %>

      <h2>Add a new prompt</h2>
      <form action="/prompts" method="POST">

        <label for="title">Prompt</label>
        <input type=text name="title" placeholder="Type your prompt here.">

        <label for="body">Details</label>
        <textarea id="promptDetails" name="body"></textarea>

        <label for="tags">Tags (add #s)</label>
        <input type="text" name="tags" placeholder="#character study #dialogue">

        <input type="submit" value="Submit" class="btn btn-dark">


      </form>
    </main>


    <footer>
      <% include ../partials/footer.ejs%>
    </footer>

    <% if (!currentUser) { %>
      <div class="my-modal">
        <div class="my-modal-textbox">
          <h3>Hold up!</h3>
          <p>You need to log in to do that.</p>
          <a href="/login"><button class="btn">Log In</button></a>
          <a href="/signup"><button class="btn">Sign Up</button></a>
        </div>
      </div>
    <% } else { %>
      <script type="text/javascript">
        $('#promptDetails').summernote({
          placeholder: "Explain your prompt. (Optional)",
          height: 100,
          disableResizeEditor: true
        })
      </script>
    <% }%>

  </body>
</html>
